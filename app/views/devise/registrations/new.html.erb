<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"></div>
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto">
        <div>
          <h1 class="text-2xl font-semibold">Register</h1>
        </div>
        <div class="divide-y divide-gray-200">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <% if resource.errors.any? %>
              <div class="text-red-500">
                <%= resource.errors.full_messages.to_sentence.capitalize %>
              </div>
            <% end %>
            <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
              <div class="relative">
                <%= f.input :email, input_html: { class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:border-rose-600" }, placeholder: "Email Address" %>
                <label for="user_email" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Email Address</label>
              </div>
              <div class="relative" data-controller="password">
                <%= f.input :password, input_html: { id:"password", class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:border-rose-600", autocomplete: "new-password", "data-password-target": "passwordInput" }, placeholder: "Password" %>
                <label for="user_password" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Password</label>
                <span class="icon peer absolute top-8 right-2" id="password-icon" data-action="click->password#togglePassword">
                  <i class="fa fa-lock" data-password-target="toggleIcon"></i>
                </span>
              </div>
              <progress id="password-strength" value="0" max="100"></progress>
              <p id="password-strength-label"></p>
              <div class="relative">
                <%= f.input :password_confirmation, input_html: { class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:border-rose-600" }, placeholder: "Confirm Password" %>
                <label for="user_password_confirmation" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Confirm Password</label>
              </div>
              <div class="relative">
                <%= f.submit "Register", class: "bg-blue-500 text-white rounded-md px-2 py-1" %>
              </div>
              <div class="text-center mt-4">
                <p class="text-gray-600">If you already have an account, <%= link_to "Log in", new_session_path(resource_name), class: "text-green-500 underline" %>.</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
