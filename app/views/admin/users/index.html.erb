<%= turbo_stream_from "users" %>

<div class="bg-gray-800 pt-3">
  <div class="rounded-tl-3xl bg-gradient-to-r from-gray-900 to-gray-800 p-4 shadow text-white">
    <div class="flex items-center justify-between">
      <h2 class="font-bold pl-2 text-2xl"><%= @page_title %></h2>
      <div class="mt-4 flex justify-center gap-4">
         <% if current_user.admin? %>
        <div class="mt-4 flex"> 
          <%= link_to 'New Admin', new_admin_user_path(role: :admin), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2", data: { turbo_frame: dom_id(User.new) } %>
      <% end %>
        </div>
    
      </div>
    </div>
  </div>
</div>

<div class="container mx-auto mt-1">
  <div class="flex justify-center">
    <div class="w-full">
      <div class="table-container">
        <ul class="w-full user-list">
          <li class="bg-gray-900 text-gray-500 p-3 flex font-bold flex-col md:flex-row gap-56 justify-between border-b border-gray-700 text-gray-300">
            <span class="w-full sm:w-1/4">Email</span>
            <span class="w-full sm:w-1/4">User Id</span>
            <span class="w-full sm:w-1/4">Role</span>
            <span class="w-full sm:w-1/4">Actions</span>
          </li>
          <%= turbo_frame_tag 'users' do %>
            <%= render @users %>
          <% end %>
        </ul>
      </div>
      <%= turbo_frame_tag User.new %>
    </div>
  </div>